// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define o modelo para a entidade UsuarioEmpresa
model UserEstabelecimento {
  id          Int           @id @default(autoincrement())
  nome        String
  email       String        @unique
  senha       String
  cpf         Int           @unique
  telefone    Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Endereco    Endereco[]
  TipoServico TipoServico[]
}

// Define o modelo para a entidade Endereco
model Endereco {
  id               Int                  @id @default(autoincrement())
  estado           String
  cidade           String
  rua              String
  numero           String
  complemento      String?
  cep              String
  usuarioEmpresaId Int?
  UsuarioEmpresa   UserEstabelecimento? @relation(fields: [usuarioEmpresaId], references: [id])
}

// Define o modelo para a entidade Tipo Servico
model TipoServico {
  id                    Int                 @id @default(autoincrement())
  nome                  String
  tempoServico          Int
  UserEstabelecimentoId Int
  UserEstabelecimento   UserEstabelecimento @relation(fields: [UserEstabelecimentoId], references: [id])
}
